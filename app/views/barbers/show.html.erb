<p id="notice"><%= notice %></p>

<p>
  <strong>User:</strong>
  <%= @barber.user %>
</p>

<p>
  <strong>Image filename:</strong>
  <%= @barber.image_filename %>
</p>

<p>
  <strong>Bio:</strong>
  <%= @barber.bio %>
</p>

<p>
  <strong>First name:</strong>
  <%= @barber.first_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @barber.last_name %>
</p>

<!-- Appointments -->

<!-- Link to Appointment Index if barber is the user -->
<% if @owner %>
    <h5><strong>You are the logged in barber</strong></h5>

<% end %>
<!-- Show appointment create for all users -->
    

<!-- End Appointments -->
<!-- Reviews Index and New -->
<h4>Reviews</h4>
<h6>Create A New Review:</h6>
<%= render 'reviews/form' %>

<% @barber.reviews.each do |review| %>
    <% if !review.new_record? %>
        <p>
          <strong>Client name:</strong>
          <%= review.client_name %>
        </p>

        <p>
          <strong>Str:</strong>
          <%= review.str %>
        </p>

        <p>
          <strong>Rating:</strong>
          <%= review.rating %>
        </p>
    <% end %>
<% end %>
<!-- End Reviews -->

