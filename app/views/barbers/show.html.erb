<p id="notice"><%= notice %></p>

<p>
  <strong>User:</strong>
  <%= @barber.user %>
</p>

<p>
  <strong>Image filename:</strong>
  <%= @barber.image_filename %>
</p>

<p>
  <strong>Bio:</strong>
  <%= @barber.bio %>
</p>

<p>
  <strong>First name:</strong>
  <%= @barber.first_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @barber.last_name %>
</p>


<h4>Reviews</h4>
<h6>Create A New Review:</h6>
<%= render 'reviews/form' %>

<% @barber.reviews.each do |review| %>
    <% if !review.new_record? %>
        <p>
          <strong>Client name:</strong>
          <%= review.client_name %>
        </p>

        <p>
          <strong>Str:</strong>
          <%= review.str %>
        </p>

        <p>
          <strong>Rating:</strong>
          <%= review.rating %>
        </p>
    <% end %>
<% end %>


<%= link_to 'Edit', edit_barber_path(@barber) %> |
<%= link_to 'Back', barbers_path %>
