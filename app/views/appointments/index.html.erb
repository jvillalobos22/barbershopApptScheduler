<div class="row">
    <div class="large-12 columns">


        <h1>Upcoming Appointments</h1>

        <ul>
            <% @appointments.each do |appointment| %>
                <li>
                <%= appointment.appt_start.strftime('%a %b %d, %Y') %><span class="time"> <%= appointment.appt_start.strftime('%H:%M') %></span>
                <%= @barber.first_name %>
                <%= appointment.client_name %>
                <%= appointment.client_phone %>
                <%= link_to 'Show', appointment %>
                <%= link_to 'Edit', edit_appointment_path(appointment) %></td>
                <%= link_to 'Destroy', appointment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </li>
            <% end %>
        </ul>
        <table>
          <thead>
            <tr>
              <th>Appt start</th>
              <th>Barber</th>
              <th>Client name</th>
              <th>Client phone</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @appointments.each do |appointment| %>
              <tr>
                <td><%= appointment.appt_start.strftime('%a %b %d, %Y') %><span class="time"> <%= appointment.appt_start.strftime('%H:%M') %></span></td>
                <td><%= @barber.first_name %></td>
                <td><%= appointment.client_name %></td>
                <td><%= appointment.client_phone %></td>
                <td><%= link_to 'Show', appointment %></td>
                <td><%= link_to 'Edit', edit_appointment_path(appointment) %></td>
                <td><%= link_to 'Destroy', appointment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <br>

        <%= link_to 'New Appointment', new_barber_appointment_path %>
        <%= link_to 'Back To Barber', barber_path(@barber) %>
    </div>
</div>
